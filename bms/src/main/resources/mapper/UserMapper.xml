<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookms.bms.mapper.UserMapper">
    <insert id="insertUser">
        INSERT INTO t_user(id,username,telephone,password)
        VALUES (#{id},#{name},#{telephone},#{password})
    </insert>

    <select id="login" resultType="user">
        SELECT id,username,telephone,password FROM t_user
        WHERE username=#{name} AND password=#{password}
    </select>
</mapper>